---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Ajouter un Professeur - LA MATRICE">
  <main class="max-w-3xl mx-auto px-4 py-24">
    <div class="bg-white shadow-soft rounded-2xl p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Ajouter un professeur</h1>

      <form method="POST" action="/api/professeurs/create" enctype="multipart/form-data" class="grid gap-6">
        <div>
          <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
          <input name="nom" required class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark" />
        </div>
        <div>
          <label for="slug" class="block text-sm font-medium text-gray-700 mb-1">Slug (URL)</label>
          <input name="slug" required placeholder="ex: julie-bernard" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark" />
        </div>
        <div>
          <label for="specialite" class="block text-sm font-medium text-gray-700 mb-1">Spécialité</label>
          <input name="specialite" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark" />
        </div>
        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" rows="3" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark"></textarea>
        </div>
        <div>
          <label for="formation" class="block text-sm font-medium text-gray-700 mb-1">Formation</label>
          <textarea name="formation" rows="2" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark"></textarea>
        </div>
        <div>
          <label for="approche" class="block text-sm font-medium text-gray-700 mb-1">Approche</label>
          <textarea name="approche" rows="2" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark"></textarea>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark" />
        </div>
        <div>
          <label for="telephone" class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
          <input name="telephone" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark" />
        </div>
        <div>
          <label for="cours" class="block text-sm font-medium text-gray-700 mb-1">Cours (1 par ligne)</label>
          <textarea name="cours" rows="3" class="w-full rounded-xl border-gray-300 bg-sage-50 text-accent-dark"></textarea>
        </div>
        <div>
          <label for="image" class="block text-sm font-medium text-gray-700 mb-1">Photo (optionnelle)</label>
          <input type="file" name="image" accept="image/*" class="block" />
        </div>

        <div>
          <button type="submit" class="w-full bg-accent text-white py-3 rounded-xl hover:bg-accent-dark transition">
            Ajouter le professeur
          </button>
        </div>
      </form>
    </div>
  </main>
</Layout>
