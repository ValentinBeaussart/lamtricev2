---
import Layout from '../../layouts/Layout.astro';
import { stages } from '../../data/stages';
import { Image } from 'astro:assets';

export function getStaticPaths() {
  return Object.keys(stages).map(id => ({
    params: { id },
    props: { stage: stages[id] }
  }));
}

const { id } = Astro.params;
const { stage } = Astro.props;

if (!stage) return Astro.redirect('/404');
---

<Layout title={`${stage.title} - La Matrice`}>
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <article class="bg-white rounded-2xl shadow-soft overflow-hidden">
      <!-- Bouton retour -->
      <div class="p-8">
        <a href="/stages" class="inline-flex items-center text-sage-500 hover:text-accent transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l5.293 5.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Retour aux stages
        </a>
      </div>

      <!-- Image de couverture -->
      <div class="relative h-96" data-aos="fade">
        <Image 
        loading="lazy"
          src={stage.image} 
          alt={stage.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
          <div data-aos="fade-up" data-aos-delay="200">
            <div class="flex items-center space-x-4 mb-4">
              <span class="px-3 py-1 bg-accent/90 rounded-full text-sm font-medium">
                {stage.date}
              </span>
              <span class="px-3 py-1 bg-white/90 text-primary rounded-full text-sm font-medium">
                {stage.duree}
              </span>
            </div>
            <h1 class="text-4xl font-bold mb-2">{stage.title}</h1>
            <p class="text-lg text-white/90">{stage.description}</p>
          </div>
        </div>
      </div>

      <!-- Contenu principal -->
      <div class="p-8">
        <!-- Informations pratiques -->
        <div class="grid md:grid-cols-3 gap-6 mb-12" data-aos="fade-up" data-aos-delay="100">
          <div class="bg-purple-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-primary mb-2 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              Durée
            </h3>
            <p class="text-gray-600">{stage.duree}</p>
          </div>
          <div class="bg-purple-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-primary mb-2 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
              </svg>
              Prix
            </h3>
            <p class="text-gray-600">{stage.prix}</p>
          </div>
          <div class="bg-purple-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-primary mb-2 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
              </svg>
              Places
            </h3>
            <p class="text-gray-600">{stage.places}</p>
          </div>
        </div>

        <!-- Programme détaillé -->
        <div class="mb-12" data-aos="fade-up" data-aos-delay="200">
          <h2 class="text-2xl font-bold text-primary mb-6">Programme</h2>
          <ul class="space-y-4">
            {stage.programme.map(item => (
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent mr-3 mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Prérequis et matériel -->
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div data-aos="fade-up" data-aos-delay="300">
            <h2 class="text-2xl font-bold text-primary mb-4">Prérequis</h2>
            <p class="text-gray-600">{stage.prerequis}</p>
          </div>
          <div data-aos="fade-up" data-aos-delay="300">
            <h2 class="text-2xl font-bold text-primary mb-4">Matériel nécessaire</h2>
            <p class="text-gray-600">{stage.materiel}</p>
          </div>
        </div>

        <!-- Professeur -->
        <div class="border-t border-gray-100 pt-12" data-aos="fade-up" data-aos-delay="400">
          <h2 class="text-2xl font-bold text-primary mb-6">Votre professeur</h2>
          <div class="flex items-center">
            <Image 
            loading="lazy"
              src={stage.professeur.image} 
              alt={stage.professeur.nom}
              class="w-16 h-16 rounded-full object-cover"
            />
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-primary">{stage.professeur.nom}</h3>
              <p class="text-gray-600">{stage.professeur.bio}</p>
            </div>
          </div>
        </div>

        <!-- Call to action -->
        <div class="mt-12 text-center" data-aos="fade-up" data-aos-delay="500">
          <a 
            href="/contact" 
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-accent hover:bg-accent-dark transition-all duration-300 transform hover:-translate-y-1"
          >
            Réserver ce stage
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </article>
  </main>
</Layout>