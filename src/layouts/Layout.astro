---
interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  // { href: "/", text: "Accueil" },
  { href: "/agenda", text: "Agenda" },
  { href: "/professeurs", text: "Professeurs" },
  { href: "/stages", text: "Les Stages" },
  { href: "/contact", text: "Contact" },
];
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="LA MATRICE - Studio de yoga à Grenoble. Cours de yoga, méditation et bien-être."
    />
    <meta name="theme-color" content="#2C3A2F" />
    <title>{title}</title>

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css"
    />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      media="print"
      onload="this.media='all'"
    />

    <!-- Preload critical CSS -->
    <link
      rel="preload"
      href="https://unpkg.com/aos@2.3.1/dist/aos.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript
      ><link
        rel="stylesheet"
        href="https://unpkg.com/aos@2.3.1/dist/aos.css"
      /></noscript
    >

    <style>
      @font-face {
        font-family: "Pacifica Regular";
        src: url("/fonts/PacificaRegular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "luloclean";
        src: url("/fonts/luloclean.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @keyframes navFadeIn {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      [data-aos] {
        opacity: 0;
        transform: translateY(20px);
        transition:
          opacity 0.6s ease-out,
          transform 0.6s ease-out;
      }

      body {
        font-family: "Inter", sans-serif;
      }

      .nav-scroll {
        backdrop-filter: blur(10px);
        background-color: rgba(242, 241, 235, 0.85);
        box-shadow: 0 2px 15px -3px rgba(0, 0, 0, 0.07);
        transition: all 0.3s ease;
      }

      .nav-link {
        position: relative;
      }

      .nav-link::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #a9b388;
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .nav-active::after {
        width: 100%;
      }

      .btn-hover {
        transition: all 0.3s ease;
      }

      .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(44, 58, 47, 0.15);
      }

      .mobile-menu {
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 60;
      }

      .mobile-menu.active {
        transform: translateX(0);
      }

      .menu-backdrop {
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 55;
      }

      .menu-backdrop.active {
        opacity: 1;
        visibility: visible;
      }

